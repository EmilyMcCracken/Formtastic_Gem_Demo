<%= semantic_form_for @article do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :body %>
    <%= f.input :author_id, :as => :select, :collection => Hash[Author.all.map{|b| [b.fname + " " + b.lname, b.id]}] %>
    <%= f.input :category_id, :as => :select, :collection => Hash[Category.all.map{|b| [b.name, b.id]}] %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
